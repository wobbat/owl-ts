{
  "name": "owl",
  "version": "1.0.0",
  "description": "A modern package manager for Arch Linux with dotfiles and setup script management",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "owl": "bun run index.ts",
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun --minify",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["arch", "linux", "package-manager", "dotfiles", "automation"],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20"
  }
}
